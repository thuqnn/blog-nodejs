<div class="mt-5">
    <h3>Update Course</h3>
    <form method="POST" action="/courses/{{blog._id}}?_method=PUT">
        <div class="form-group mt-4">
            <label for="name">Name Course</label>
            <input type="text" class="form-control" value="{{blog.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>    
            <textarea  class="form-control" name="description" id="description" cols="30" rows="10">{{blog.description}}"</textarea>
        <div class="form-group">
            <label for="videoId">Video</label>
            <input type="text" class="form-control" value="{{blog.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" value="{{blog.level}}" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-success">Save Course</button>
    </form>
</div>
